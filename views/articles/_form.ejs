<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control mb-2" value="<%=article.title%>">
</div>

<div class="form-group">
    <label for="description">Brief Description</label>
    <textarea name="description" id="description" class="form-control mb-2"><%=article.description%></textarea>   
</div>
<div class="form-group">
    <label for="markdown">Main Text</label>
    <textarea name="markdown" id="markdown" class="form-control mb-2"><%=article.markdown%></textarea>   
</div>

<a class="btn btn-secondary" href="/">Cancel</a>

<button type="submit" class="btn btn-primary">Save</button>