<%- include('header') %>

    <body>
        <title>Home</title>

        <div class="container">
            <h2>All Articles</h2>
            <a href="/articles/new" class="btn btn-success mt-2">New Article</a>
            <% articles.forEach(article=> {%>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=article.title%>
                        </h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%=article.created_on.toLocaleDateString()%>
                        </div>
                        <div class="card-text mb-2">
                            <%= article.description %>
                        </div>
                        <a class="btn btn-primary" href="/articles/<%=article.id%>">Read More</a>
                        <form class="d-inline" method="post" action="/articles/delete/<%=article.id%>">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>

                </div>

                <%})%>
        </div>
    </body>